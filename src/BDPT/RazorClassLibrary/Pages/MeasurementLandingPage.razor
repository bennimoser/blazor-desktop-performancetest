@page "/measurementlandingpage/{Remaining:int}"

@code {

    [Parameter]
    public int Remaining { get; set; }

    [Inject]
    public NavigationManager NavManager { get; set; }

    protected override void OnInitialized()
    {
        if(Remaining > 0)
        {
            NavManager.NavigateTo($"/studentoverview/{Remaining}");
        }
        else
        {
            NavManager.NavigateTo("/");
        }
        base.OnInitialized();
    }
}
